{
  "info": {
    "name": "Opti Backend API",
    "_postman_id": "opti-backend-collection",
    "description": "Postman collection for Opti backend (user, orders, promo, expenses)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User",
      "item": [
        {
          "name": "Setup initial admin",
          "request": {
        {
          "name": "Get Public Profile By ID",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/api/user/public/:id" }
          }
        },
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"secret123\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{baseUrl}}/api/user/setup-admin" }
          }
        },
        {
          "name": "Send OTP (register)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"you@example.com\",\n  \"username\": \"shopkeeper\",\n  \"password\": \"pass123\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{baseUrl}}/api/user/send-otp" }
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"you@example.com\",\n  \"otp\": \"123456\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{baseUrl}}/api/user/verify-otp" }
          }
        },
        {
          "name": "Login (email or username)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"you@example.com\",\n  \"password\": \"pass123\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{baseUrl}}/api/user/login" }
          }
        },
        {
          "name": "Admin Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"adminpass\"\n}\n",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{baseUrl}}/api/user/admin/login" }
          }
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"you@example.com\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{baseUrl}}/api/user/forgot-password" }
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"you@example.com\",\n  \"otp\": \"123456\",\n  \"newPassword\": \"newpass123\"\n}\n",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{baseUrl}}/api/user/reset-password" }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/user/profile" }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"shopName\": \"My Shop\",\n  \"address\": \"Street 123\"\n}\n",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{baseUrl}}/api/user/profile" }
          }
        },
        {
          "name": "Upload Profile Image (multipart)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": {
              "mode": "formdata",
              "formdata": [{ "key": "image", "type": "file", "src": "" }]
            },
            "url": { "raw": "{{baseUrl}}/api/user/upload-image" }
          }
        },
        {
          "name": "Create Sub-user",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"subUsername\": \"sub1\",\n  \"email\": \"sub@example.com\",\n  \"password\": \"subpass\",\n  \"phoneNumber\": \"9876543210\"\n}\n",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{baseUrl}}/api/user/sub-users" }
          }
        },
        {
          "name": "Get Sub-users",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/user/sub-users" }
          }
        },
        {
          "name": "Admin: Create User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user2\",\n  \"email\": \"user2@example.com\",\n  \"password\": \"pass123\",\n  \"isAdmin\": false\n}\n",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{baseUrl}}/api/user/admin/create-user" }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"patientName\": \"John Doe\",\n  \"whatsappNumber\": \"9876543210\",\n  \"frameDetails\": \"Black frame\",\n  \"lensType\": \"Single Vision\",\n  \"totalAmount\": 1200,\n  \"advance\": 200,\n  \"rightEye\": { \"sph\": -1.25, \"cyl\": -0.5, \"axis\": 90 },\n  \"leftEye\": { \"sph\": -1.0, \"cyl\": -0.75, \"axis\": 85 },\n  \"addInput\": \"+2.00\",\n  \"importantNote\": \"Rush\"\n}\n",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{baseUrl}}/api/orders/create" }
          }
        },
        {
          "name": "Get Pending Orders",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/orders/pending" }
          }
        },
        {
          "name": "Get Completed Orders",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/orders/completed" }
          }
        },
        {
          "name": "Get All Orders",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/orders/all" }
          }
        },
        {
          "name": "Get Order By ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/orders/:id" }
          }
        },
        {
          "name": "Update Order",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"completed\"\n}\n",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{baseUrl}}/api/orders/:id" }
          }
        },
        {
          "name": "Archive (Delete) Order",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/orders/:id" }
          }
        },
        {
          "name": "Mark Order Complete (PUT)",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/orders/:id/complete" }
          }
        }
      ]
    },
    {
      "name": "Expenses",
      "item": [
        {
          "name": "Add Expense",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 500,\n  \"category\": \"Food\",\n  \"date\": \"2025-12-01\",\n  \"description\": \"Lunch\"\n}\n",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{baseUrl}}/api/expenses" }
          }
        },
        {
          "name": "Get Expenses",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/expenses" }
          }
        },
        {
          "name": "Get Expense By ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/expenses/:id" }
          }
        },
        {
          "name": "Update Expense",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 450\n}\n",
              "options": { "raw": { "language": "json" } }
            },
            "url": { "raw": "{{baseUrl}}/api/expenses/:id" }
          }
        },
        {
          "name": "Delete Expense",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/expenses/:id" }
          }
        }
      ]
    },
    {
      "name": "Promo",
      "item": [
        {
          "name": "Get Promo (public)",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/api/promo" }
          }
        },
        {
          "name": "Set Promo (admin multipart)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "title", "value": "Big Sale", "type": "text" },
                {
                  "key": "link",
                  "value": "https://example.com",
                  "type": "text"
                },
                { "key": "image", "type": "file", "src": "" }
              ]
            },
            "url": { "raw": "{{baseUrl}}/api/promo" }
          }
        },
        {
          "name": "Delete Promo (admin)",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/promo" }
          }
        }
      ]
    },
    {
      "name": "Misc",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/api/health" }
          }
        },
        {
          "name": "Uploads (example)",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/uploads/{{exampleFile}}" }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "https://optislip.com" },
    { "key": "token", "value": "" },
    { "key": "adminToken", "value": "" },
    { "key": "exampleFile", "value": "image.jpg" }
  ]
}
